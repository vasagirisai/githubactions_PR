name: Run Ansible Lint and Create Pull Request

on:
  push:
    branches:
      - vasagirisai-pr-2

jobs:
  run-ansible-lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Install Ansible
        uses: actions/setup-python@v2
        with:
          python-version: '3.7'
      - name: Install ansible-lint
        run: |
          python -m pip install ansible-lint
      - name: Run ansible-lint
        run: |
          ansible-lint *
      - name: Create Pull Request
        uses: peter-evans/create-pull-request@v3
        with:
          commit-message: 'Updates to main branch'
          title: 'Update to main branch'
          body: 'This pull request updates the main branch with the latest changes.'
          labels: 'update, main'
          reviewers: 'vasagirisai'
          assignees: 'vsagirisai'
          branch: 'main'
          token: ${{ secrets.GITHUB_TOKEN }}
